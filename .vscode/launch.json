    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Current File)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-current",
            "program": "${fileDirname}/bin/Debug/net10.0/${fileDirnameBasename}.dll",
            "args": [],
            "cwd": "${fileDirname}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ROOT": "${env:HOME}/.dotnet"
            }
        }
    ]
}